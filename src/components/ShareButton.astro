---
interface Props {
  title: string;
  lang?: 'zh-tw' | 'en';
}

const { title, lang = 'zh-tw' } = Astro.props;

const i18n = {
  'zh-tw': {
    share: '分享這篇文章',
    nativeShare: '分享',
    copyLink: '複製連結',
    copied: '已複製！',
  },
  en: {
    share: 'Share this article',
    nativeShare: 'Share',
    copyLink: 'Copy link',
    copied: 'Copied!',
  },
};

const t = i18n[lang];
---

<div class="share-section">
  <p class="share-label">{t.share}</p>
  <div
    class="share-buttons"
    data-title={title}
    data-copy-text={t.copyLink}
    data-copied-text={t.copied}
    data-native-text={t.nativeShare}
  >
    <!-- Native share button (hidden by default, shown via JS if supported) -->
    <button class="share-btn share-native" aria-label={t.nativeShare} style="display:none">
      <svg
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path>
        <polyline points="16 6 12 2 8 6"></polyline>
        <line x1="12" y1="2" x2="12" y2="15"></line>
      </svg>
      <span>{t.nativeShare}</span>
    </button>

    <!-- Fallback buttons (shown when Web Share API is not available) -->
    <div class="share-fallback">
      <!-- X / Twitter -->
      <a
        class="share-btn share-x"
        aria-label="Share on X"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
          ></path>
        </svg>
      </a>

      <!-- Facebook -->
      <a
        class="share-btn share-fb"
        aria-label="Share on Facebook"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
          ></path>
        </svg>
      </a>

      <!-- LINE -->
      <a
        class="share-btn share-line"
        aria-label="Share on LINE"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M19.365 9.863c.349 0 .63.285.63.631 0 .345-.281.63-.63.63H17.61v1.125h1.755c.349 0 .63.283.63.63 0 .344-.281.629-.63.629h-2.386c-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.63-.63h2.386c.346 0 .627.285.627.63 0 .349-.281.63-.63.63H17.61v1.125h1.755zm-3.855 3.016c0 .27-.174.51-.432.596-.064.021-.133.031-.199.031-.211 0-.391-.09-.51-.25l-2.443-3.317v2.94c0 .344-.279.629-.631.629-.346 0-.626-.285-.626-.629V8.108c0-.27.173-.51.43-.595.06-.023.136-.033.194-.033.195 0 .375.104.495.254l2.462 3.33V8.108c0-.345.282-.63.63-.63.345 0 .63.285.63.63v4.771zm-5.741 0c0 .344-.282.629-.631.629-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.63-.63.346 0 .628.285.628.63v4.771zm-2.466.629H4.917c-.345 0-.63-.285-.63-.629V8.108c0-.345.285-.63.63-.63.348 0 .63.285.63.63v4.141h1.756c.348 0 .629.283.629.63 0 .344-.282.629-.629.629M24 10.314C24 4.943 18.615.572 12 .572S0 4.943 0 10.314c0 4.811 4.27 8.842 10.035 9.608.391.082.923.258 1.058.59.12.301.079.766.038 1.08l-.164 1.02c-.045.301-.24 1.186 1.049.645 1.291-.539 6.916-4.078 9.436-6.975C23.176 14.393 24 12.458 24 10.314"
          ></path>
        </svg>
      </a>

      <!-- Copy link -->
      <button class="share-btn share-copy" aria-label={t.copyLink}>
        <svg
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
          <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
        </svg>
        <span class="copy-text">{t.copyLink}</span>
      </button>
    </div>
  </div>
</div>

<script>
  function initShareButtons() {
    const container = document.querySelector('.share-buttons');
    if (!container) return;

    const title = container.getAttribute('data-title') || document.title;
    const url = window.location.href;
    const copyText = container.getAttribute('data-copy-text') || 'Copy link';
    const copiedText = container.getAttribute('data-copied-text') || 'Copied!';

    const nativeBtn = container.querySelector('.share-native') as HTMLElement;
    const fallback = container.querySelector('.share-fallback') as HTMLElement;

    // Web Share API available → show native button, hide fallback
    if (navigator.share) {
      nativeBtn.style.display = 'inline-flex';
      fallback.style.display = 'none';

      nativeBtn.addEventListener('click', async () => {
        try {
          await navigator.share({ title, url });
        } catch (_e) {
          // User cancelled — no-op
        }
      });
    } else {
      // No Web Share API → show fallback buttons
      nativeBtn.style.display = 'none';
      fallback.style.display = 'flex';
    }

    // Set fallback URLs
    const encodedUrl = encodeURIComponent(url);
    const encodedTitle = encodeURIComponent(title);

    const xBtn = container.querySelector('.share-x') as HTMLAnchorElement;
    if (xBtn) xBtn.href = `https://x.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`;

    const fbBtn = container.querySelector('.share-fb') as HTMLAnchorElement;
    if (fbBtn) fbBtn.href = `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`;

    const lineBtn = container.querySelector('.share-line') as HTMLAnchorElement;
    if (lineBtn) lineBtn.href = `https://social-plugins.line.me/lineit/share?url=${encodedUrl}`;

    // Copy link button
    const copyBtn = container.querySelector('.share-copy') as HTMLButtonElement;
    if (copyBtn) {
      copyBtn.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(url);
          const span = copyBtn.querySelector('.copy-text');
          if (span) {
            span.textContent = copiedText;
            setTimeout(() => {
              span.textContent = copyText;
            }, 2000);
          }
        } catch (_e) {
          // Fallback
          const input = document.createElement('input');
          input.value = url;
          document.body.appendChild(input);
          input.select();
          document.execCommand('copy');
          document.body.removeChild(input);
        }
      });
    }
  }

  initShareButtons();
</script>

<style>
  .share-section {
    margin-top: 2rem;
    padding: 1.25rem;
    background: var(--color-surface);
    border-radius: 8px;
    text-align: center;
  }

  .share-label {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  .share-buttons {
    display: flex;
    justify-content: center;
  }

  .share-fallback {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }

  .share-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 0.85rem;
    border-radius: 6px;
    font-size: 0.8rem;
    cursor: pointer;
    transition:
      background 0.2s,
      transform 0.1s;
    text-decoration: none;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
    color: var(--color-text);
    font-family: inherit;
  }

  .share-btn:hover {
    background: var(--color-surface-hover);
    transform: translateY(-1px);
  }

  .share-btn:active {
    transform: translateY(0);
  }

  .share-native {
    padding: 0.6rem 1.2rem;
    font-size: 0.9rem;
    background: var(--color-accent);
    color: #fff;
    border-color: var(--color-accent);
  }

  .share-native:hover {
    opacity: 0.9;
    background: var(--color-accent);
  }

  .share-x:hover {
    color: #000;
  }
  .share-fb:hover {
    color: #1877f2;
  }
  .share-line:hover {
    color: #06c755;
  }
  .share-copy:hover {
    color: var(--color-accent);
  }

  [data-theme='dark'] .share-x:hover {
    color: #fff;
  }
</style>
