---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import TableOfContents from '../../../components/TableOfContents.astro';
import PrevNextNav from '../../../components/PrevNextNav.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ data }) => {
    return data.lang === 'en';
  });

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: {
      post,
      allPosts: posts,
    },
  }));
}

const { post, allPosts } = Astro.props;
const { Content } = await post.render();

const isClawdPicks = post.data.tags?.includes('clawd-picks');
---

<BaseLayout title={`${post.data.title} - gu-log`} lang="en">
  <article class="post">
    <header class="post-header">
      <h1>{post.data.title}</h1>
      <p class="post-meta">
        {post.data.date}
        {isClawdPicks && (
          <span class="clawd-picks-badge">
            <img src="/clawd-icon.png" alt="Clawd Picks" class="clawd-icon" />
          </span>
        )}
      </p>
    </header>

    <div class="source-citation">
      <strong>Original source:</strong>
      <a href={post.data.sourceUrl} target="_blank" rel="noopener">
        {post.data.source}
      </a>
    </div>

    <TableOfContents lang="en" />

    <div class="post-content">
      <Content />
    </div>

    <PrevNextNav currentSlug={post.slug} allPosts={allPosts} lang="en" />

    <footer class="post-footer">
      <a href="/en">‚Üê Back to home</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post-header {
    margin-bottom: 1.5rem;
  }

  .post-header h1 {
    margin-bottom: 0.5rem;
  }

  .clawd-picks-badge {
    margin-left: 0.5rem;
    vertical-align: middle;
  }

  .clawd-icon {
    width: 24px;
    height: 24px;
    vertical-align: middle;
  }

  .post-content {
    margin: 1.5rem 0;
  }

  .post-content blockquote {
    font-style: normal;
    font-size: 1.1rem;
  }

  .post-footer {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }
</style>
