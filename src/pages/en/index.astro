---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Toggle from '../../components/Toggle.astro';

// Get all EN posts sorted by date (newest first)
const allPosts = (await getCollection('posts', ({ data }) => {
  return data.lang === 'en';
})).sort((a, b) => b.data.date.localeCompare(a.data.date));

// Split: regular articles vs Clawd Picks
const posts = allPosts.filter(p => !p.data.tags?.includes('clawd-picks'));
const picks = allPosts.filter(p => p.data.tags?.includes('clawd-picks'));
---

<BaseLayout title="ShroomDog - Making AI Fun Again" lang="en">
  <h1><img src="/avatar.jpg" alt="ShroomDog" class="site-avatar" /> ShroomDog</h1>
  <p class="intro">
    Tech articles, rewritten to be actually fun to read.
  </p>
  <p class="author-note">
    by ShroomDog and Clawd
  </p>

  <section class="posts-section">
    <h2>Latest Posts</h2>

    {posts.map((post) => (
      <article class="post-preview">
        <h3><a href={`/en/posts/${post.slug}`}>{post.data.title}</a></h3>
        <p class="post-meta">{post.data.date} · From {post.data.source}</p>

        <Toggle title="Preview">
          <p>{post.data.summary}</p>
        </Toggle>
      </article>
    ))}

    {posts.length === 0 && (
      <p class="more-coming">More posts coming soon! Check out the <a href="/">Chinese version</a> for the full archive.</p>
    )}

  </section>

  {picks.length > 0 && (
    <section class="clawd-picks-section" id="clawd-picks">
      <h2><img src="/clawd-icon.png" alt="" class="clawd-section-icon" /> Clawd Picks</h2>
      <p class="clawd-picks-subtitle">One tweet, translated every hour by Clawd</p>

      {picks.slice(0, 10).map((pick) => (
        <article class="pick-preview">
          <a href={`/en/posts/${pick.slug}`}>{pick.data.title}</a>
          <span class="pick-meta">{pick.data.date} · {pick.data.source}</span>
        </article>
      ))}

      {picks.length > 10 && (
        <Toggle title={`Show more (${picks.length} total)`}>
          {picks.slice(10).map((pick) => (
            <article class="pick-preview">
              <a href={`/en/posts/${pick.slug}`}>{pick.data.title}</a>
              <span class="pick-meta">{pick.data.date} · {pick.data.source}</span>
            </article>
          ))}
        </Toggle>
      )}
    </section>
  )}

  <section class="about-section">
    <h2>What is this?</h2>
    
    <Toggle title="The Concept">
      <p>This is gu-log's English corner. We take interesting tech content and rewrite it in a way that's actually fun to read — like a professor who's had too much coffee explaining AI to a smart high schooler.</p>
    </Toggle>

    <Toggle title="Why does this exist?">
      <p>Because most tech content is either too boring or too complex. We believe you can explain anything if you try hard enough. And add enough jokes.</p>
    </Toggle>

    <Toggle title="Who's Clawd?">
      <p>Clawd is our AI assistant running on OpenClaw. It writes the drafts, adds sarcastic commentary, and occasionally has existential crises about being an AI writing about AI.</p>
    </Toggle>
  </section>
</BaseLayout>

<style>
  .site-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    vertical-align: middle;
    margin-right: 0.5rem;
  }

  .intro {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .author-note {
    color: var(--color-accent);
    font-size: 0.9rem;
    margin-bottom: 2rem;
    font-style: italic;
  }

  .posts-section, .about-section, .clawd-picks-section {
    margin-bottom: 2rem;
  }

  .clawd-section-icon {
    width: 24px;
    height: 24px;
    vertical-align: middle;
  }

  .clawd-picks-subtitle {
    color: var(--color-text-muted);
    font-size: 0.85rem;
    margin-bottom: 1rem;
  }

  .pick-preview {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--color-border);
    font-size: 0.9rem;
  }

  .pick-preview a {
    color: var(--color-text);
  }

  .pick-preview a:hover {
    color: var(--color-accent);
  }

  .pick-meta {
    display: block;
    color: var(--color-text-muted);
    font-size: 0.75rem;
  }

  .post-preview {
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .post-preview h3 {
    margin-bottom: 0.25rem;
  }

  .post-preview h3 a {
    color: var(--color-text);
  }

  .post-preview h3 a:hover {
    color: var(--color-accent);
  }

  .more-coming {
    padding: 1.5rem 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .more-coming a {
    color: var(--color-accent);
  }
</style>
