---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import TicketBadge from '../../components/TicketBadge.astro';
import Toggle from '../../components/Toggle.astro';

// Helper: extract number from ticketId (e.g., "Lv-02" → 2)
const getTicketNumber = (ticketId: string | undefined) => {
  if (!ticketId) return 0;
  const match = ticketId.match(/\d+$/);
  return match ? parseInt(match[0]) : 0;
};

// Get all Lv posts, sorted by ticketId number descending
const lvPosts = (
  await getCollection('posts', ({ data }) => {
    return data.lang === 'zh-tw' && data.ticketId?.startsWith('Lv-');
  })
).sort((a, b) => getTicketNumber(b.data.ticketId) - getTicketNumber(a.data.ticketId));
---

<BaseLayout title="Level-Up 全部文章">
  <h1>⚔️ Level-Up</h1>
  <p class="page-subtitle">互動式技術教學 — 用 RPG 爬塔風格學技術</p>
  <p class="post-count">共 {lvPosts.length} 篇</p>

  <a href="/" class="back-link">← 返回首頁</a>

  <section class="archive-list">
    {
      lvPosts.map((post) => (
        <article class="post-preview">
          <h3>
            <a href={`/posts/${post.slug}`}>{post.data.title}</a>
          </h3>
          <p class="post-meta">
            {post.data.ticketId && <TicketBadge ticketId={post.data.ticketId} />}
            {post.data.translatedDate || post.data.originalDate} · {post.data.source}
          </p>
          <Toggle title="摘要預覽">
            <p>{post.data.summary}</p>
          </Toggle>
        </article>
      ))
    }
  </section>
</BaseLayout>

<style>
  .page-subtitle {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .post-count {
    color: var(--color-text-muted);
    font-size: 0.85rem;
    margin-bottom: 1rem;
  }

  .back-link {
    display: inline-block;
    color: var(--color-accent);
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .archive-list {
    margin-bottom: 2rem;
  }

  .post-preview {
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .post-preview h3 {
    margin-bottom: 0.25rem;
  }

  .post-preview h3 a {
    color: var(--color-text);
  }

  .post-preview h3 a:hover {
    color: var(--color-accent);
  }
</style>
